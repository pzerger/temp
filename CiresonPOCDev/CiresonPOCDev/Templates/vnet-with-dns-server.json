{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "allowedValues": [
                "West US",
                "East US",
                "West Europe",
                "East Asia",
                "Southeast Asia"
            ],
            "metadata": {
                "Description": "The region to deploy the resources into"
            },
            "defaultValue": "West US"
        },
        "virtualNetworkName": {
            "type": "string",
            "metadata": {
                "Description": "The name of the Virtual Network to Create"
            },
			"defaultValue": "ContosoNET"
        },
        "virtualNetworkAddressRange": {
            "type": "string",
            "metadata": {
                "Description": "The address range of the new VNET in CIDR format."
            },
            "defaultValue": "10.0.0.0/16"
        },
                "DCsubnetPrefix": {
            "type": "string",
            "defaultValue": "10.0.1.0/24",
            "metadata": {
                "Description": "DC Subnet Prefix"
            }
        },
        "SCsubnetPrefix": {
            "type": "string",
            "defaultValue": "10.0.2.0/24",
            "metadata": {
                "Description": "SC Subnet Prefix"
            }
        },
        "SQLsubnetPrefix": {
            "type": "string",
            "defaultValue": "10.0.3.0/24",
            "metadata": {
                "Description": "SQL Subnet Prefix"
            }
        },
        "subnetName": {
            "type": "string",
            "metadata": {
                "Description": "The name of the subnet created in the new VNET"
            },
            "defaultValue": "DCSubnet"
        },
        "subnetRange": {
            "type": "string",
            "metadata": {
                "Description": "The address range of the subnet created in the new VNET"
            },
            "defaultValue": "10.0.1.0/24"
        },
        "DNSServerAddress": {
            "type": "array",
            "metadata": {
                "Description": "The DNS address(es) of the DNS Server(s) used by the VNET"
            },
            "defaultValue": "10.0.1.4"
        }
    },
	"resources": [
		{
			"name": "[parameters('virtualNetworkName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "ContosoNET",
            "location": "[parameters('location')]",
			"apiVersion": "2015-05-01-preview",
			"properties": {
				"addressSpace": {
					"addressPrefixes": [
						"[parameters('virtualNetworkAddressRange')]"
					]
				},
				"dhcpOptions": {
					"dnsServers": "[parameters('DNSServerAddress')]"
				},
                "subnets": [
                    {
                        "name": "DCSubnet",
                        "properties": {
                            "addressPrefix": "[parameters('DCsubnetPrefix')]"
                        }
                    },
                    {
                        "name": "SCSubnet",
                        "properties": {
                            "addressPrefix": "[parameters('SCsubnetPrefix')]"
                        }
                    },
                    {
                        "name": "SQLSubnet",
                        "properties": {
                            "addressPrefix": "[parameters('SQLsubnetPrefix')]"
                        }
                    }
                ]
			}
		}
	]
}